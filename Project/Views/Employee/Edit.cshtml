@model EmployeeApp.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0 text-center">
                <i class="bi bi-person-lines-fill text-primary" style="font-size: 2.5rem;"></i>
                <h3 class="fw-bold mt-2">Edit Employee Info</h3>
                <p class="text-muted">Update employee details in the system</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-medium"></label>
                        <input asp-for="Name" class="form-control" placeholder="Jane Doe" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Aadhaar" class="form-label fw-medium"></label>
                        <input asp-for="Aadhaar" class="form-control" placeholder="XXXX XXXX XXXX" />
                        <span asp-validation-for="Aadhaar" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Profile Photo (Optional)</label>
                        <input type="file" name="uploadPhoto" class="form-control" accept="image/*" />
                        @if (Model.Photo != null)
                        {
                            <div class="mt-2 text-muted small d-flex align-items-center gap-2">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" class="rounded shadow-sm" style="width: 40px; height: 40px; object-fit: cover;" alt="Current avatar"/>
                                Current Photo
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-medium"></label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter full residential address"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label fw-medium"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="JoiningDate" class="form-label fw-medium"></label>
                            <input asp-for="JoiningDate" class="form-control" type="date" />
                            <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Salary" class="form-label fw-medium"></label>
                        <div class="input-group">
                            <span class="input-group-text fw-bold">â‚¹</span>
                            <input asp-for="Salary" class="form-control" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Salary" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-light border me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4 fw-semibold">
                            <i class="bi bi-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
