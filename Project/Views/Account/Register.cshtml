@model EmployeeApp.Models.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - Empower Systems</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #3b4fd8;
            --violet: #7c3aed;
            --accent-mint: #10d9a0;
            --accent-coral: #ff6b6b;
            --bg-cream: #f8f5f0;
            
            --text-dark: #0f172a;
            --text-mid: #475569;
            --text-light: #94a3b8;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'DM Sans', sans-serif;
            color: var(--text-dark);
            background-color: var(--bg-cream);
            overflow-x: hidden;
            min-height: 100vh;
        }

        h1, h2, h3, h4, h5, h6, .heading-font {
            font-family: 'Plus Jakarta Sans', sans-serif;
            letter-spacing: -0.02em;
        }

        /* Background Effects */
        .blobs-container {
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 1;
            overflow: hidden;
            pointer-events: none;
        }
        
        .blob {
            position: absolute;
            filter: blur(60px);
            border-radius: 50%;
            animation: blobDrift 18s infinite alternate ease-in-out;
            opacity: 0.8;
        }
        .blob-1 { top: -10%; left: -10%; width: 50vw; height: 50vw; background: rgba(59, 79, 216, 0.4); } 
        .blob-2 { bottom: -10%; right: -10%; width: 60vw; height: 60vw; background: rgba(16, 217, 160, 0.3); animation-delay: -5s; } 
        .blob-3 { top: 40%; left: 30%; width: 40vw; height: 40vw; background: rgba(255, 107, 107, 0.25); animation-delay: -10s;}
        
        @@keyframes blobDrift {
            0% { transform: translate(0, 0) scale(1); }
            100% { transform: translate(10%, 15%) scale(1.1); }
        }

        .grid-overlay {
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 2;
            pointer-events: none;
            background-image: linear-gradient(rgba(148, 163, 184, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(148, 163, 184, 0.1) 1px, transparent 1px);
            background-size: 48px 48px;
        }

        /* Layout */
        .split-layout {
            display: flex;
            min-height: 100vh;
            position: relative;
            z-index: 5;
        }

        .left-panel {
            flex: 1;
            padding: 4rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        .right-panel {
            flex: 1;
            padding: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        @@media (max-width: 991.98px) {
            .left-panel { display: none !important; }
            .split-layout { justify-content: center; }
        }

        /* Left Panel Content */
        .brand-header {
            position: absolute;
            top: 4rem;
            left: 4rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .brand-icon {
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, var(--primary), var(--violet));
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .brand-icon svg { width: 18px; height: 18px; fill: white; }
        .brand-text { font-size: 1.25rem; font-weight: 800; }

        .hero-title { font-size: 4rem; line-height: 1.1; margin-bottom: 1.5rem; max-width: 600px; }
        .text-gradient {
            background: linear-gradient(to right, var(--primary), var(--violet), var(--accent-mint));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero-subtitle { font-size: 1.25rem; color: var(--text-mid); max-width: 500px; margin-bottom: 3rem; line-height: 1.6; }

        .floating-cards { position: absolute; bottom: 6rem; right: 2rem; }
        .float-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 1rem 1.25rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
            animation: floatUpDown 6s ease-in-out infinite;
            border: 1px solid rgba(255,255,255,0.6);
        }

        .float-card:nth-child(2) { animation-delay: -3s; margin-right: -2rem; }
        .icon-circle { width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; }
        .icon-circle.coral { background: #fee2e2; color: #ef4444; }
        .icon-circle.indigo { background: #e0e7ff; color: #4f46e5; }
        .icon-circle svg { width: 16px; height: 16px; }

        @@keyframes floatUpDown {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        /* Right Panel - Register Card */
        .register-card {
            background: rgba(255, 255, 255, 0.88);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 28px;
            padding: 3rem;
            width: 100%;
            max-width: 480px;
            box-shadow: 0 25px 50px -12px rgba(59, 79, 216, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.5);
            animation: slideUpSpring 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
            opacity: 0;
            transform: translateY(60px);
        }

        @@keyframes slideUpSpring {
            to { opacity: 1; transform: translateY(0); }
        }

        .register-card-header { margin-bottom: 2rem; }
        .register-card-title { font-size: 2rem; margin-bottom: 0.5rem; color: var(--text-dark); }
        .register-card-subtitle { color: var(--text-mid); font-size: 1rem; }

        /* Animated Tab Switcher */
        .tab-switcher {
            position: relative;
            display: flex;
            background: rgba(241, 245, 249, 0.8);
            border-radius: 99px;
            padding: 0.375rem;
            margin-bottom: 2rem;
        }

        .tab-btn {
            flex: 1;
            text-align: center;
            border: none;
            background: transparent;
            padding: 0.625rem 1rem;
            font-weight: 500;
            color: var(--text-mid);
            position: relative;
            z-index: 2;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .tab-btn.active { color: var(--text-dark); font-weight: 600; }

        .pill-slider {
            position: absolute;
            top: 0.375rem;
            bottom: 0.375rem;
            left: 0.375rem;
            width: calc(50% - 0.375rem);
            background: white;
            border-radius: 99px;
            z-index: 1;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: transform 0.5s cubic-bezier(0.25, 1, 0.5, 1);
        }

        .tab-switcher[data-active="admin"] .pill-slider { transform: translateX(100%); }

        /* Inputs */
        .input-group-custom { position: relative; margin-bottom: 1.25rem; }
        .input-group-custom input {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border-radius: 12px;
            border: 1px solid #e2e8f0;
            background: white;
            transition: all 0.3s ease;
            font-size: 1rem;
            color: var(--text-dark);
        }

        .input-group-custom input:focus {
            border-color: var(--primary);
            outline: none;
            box-shadow: 0 0 0 4px rgba(59, 79, 216, 0.15);
        }

        .input-group-custom input::placeholder { color: var(--text-light); }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            pointer-events: none;
            transition: color 0.3s ease;
            display: flex;
            align-items: center;
        }
        .input-icon svg { width: 20px; height: 20px; }
        .form-label { display: block; margin-bottom: 0.5rem; font-weight: 500; color: var(--text-dark); font-size: 0.875rem; }

        /* Button */
        .btn-register {
            width: 100%;
            padding: 1rem;
            border-radius: 12px;
            border: none;
            background: linear-gradient(135deg, var(--primary), var(--violet));
            color: white;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            box-shadow: 0 4px 14px rgba(59, 79, 216, 0.4);
            margin-bottom: 2rem;
            margin-top: 1.5rem;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(59, 79, 216, 0.5);
        }

        .btn-register::after {
            content: "";
            position: absolute;
            top: 0; left: -100%;
            width: 50%; height: 100%;
            background: linear-gradient(to right, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.3) 50%, rgba(255, 255, 255, 0) 100%);
            transform: skewX(-25deg);
            animation: shimmer 4s infinite;
        }

        @@keyframes shimmer {
            0% { left: -100%; }
            20% { left: 200%; }
            100% { left: 200%; }
        }

        .footer-link { text-align: center; color: var(--text-mid); font-size: 0.875rem; }
        .footer-link a { color: var(--primary); font-weight: 600; text-decoration: none; }
    </style>
</head>
<body>

    <div class="blobs-container">
        <div class="blob blob-1"></div>
        <div class="blob blob-2"></div>
        <div class="blob blob-3"></div>
    </div>
    <div class="grid-overlay"></div>

    <div class="split-layout">
        <!-- Left Branding Panel -->
        <div class="left-panel">
            <div class="brand-header">
                <div class="brand-icon">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 12l10 5 10-5M2 17l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
                <div class="brand-text heading-font">Empower Systems</div>
            </div>

            <h1 class="hero-title">Start building the <span class="text-gradient">future</span> today.</h1>
            <p class="hero-subtitle">Join thousands of organizations using Empower Systems to track their operations securely and beautifully.</p>

            <div class="floating-cards">
                <div class="float-card">
                    <div class="icon-circle coral">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                    </div>
                    <div>
                        <div style="font-weight: 600; font-size: 0.875rem; color: var(--text-dark);">ISO Certified Security</div>
                        <div style="font-size: 0.75rem; color: var(--text-light);">Fully compliant architecture</div>
                    </div>
                </div>
                <div class="float-card">
                    <div class="icon-circle indigo">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                    </div>
                    <div>
                        <div style="font-weight: 600; font-size: 0.875rem; color: var(--text-dark);">Rapid Execution</div>
                        <div style="font-size: 0.75rem; color: var(--text-light);">99.9% processing speed</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Register Panel -->
        <div class="right-panel">
            <div class="register-card">
                <div class="register-card-header">
                    <h2 class="register-card-title heading-font">Join Empower âœ¨</h2>
                    <p class="register-card-subtitle">Create an account to manage your ecosystem</p>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mb-4" role="alert" style="border-radius: 12px; background: #fef2f2; border: 1px solid #fecaca; color: #ef4444;">
                        <div asp-validation-summary="All" class="small mb-0"></div>
                    </div>
                }

                <div class="tab-switcher" id="registerTypeTabs" data-active="user">
                    <div class="pill-slider"></div>
                    <button type="button" class="tab-btn active" id="btn-tab-user" onclick="switchRegisterMode('user')">User</button>
                    <button type="button" class="tab-btn" id="btn-tab-admin" onclick="switchRegisterMode('admin')">Admin</button>
                </div>

                <form asp-controller="Account" asp-action="Register" method="post">
                    <input type="hidden" id="roleInput" name="Role" value="User" />

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <div class="input-group-custom">
                            <span class="input-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                            </span>
                            <input asp-for="Username" placeholder="Choose a username" autocomplete="off" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small" style="color: var(--accent-coral) !important;"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group-custom">
                            <span class="input-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                            </span>
                            <input asp-for="Password" placeholder="Create a password" autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small" style="color: var(--accent-coral) !important;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <div class="input-group-custom">
                            <span class="input-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                            </span>
                            <input asp-for="ConfirmPassword" placeholder="Confirm your password" autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small" style="color: var(--accent-coral) !important;"></span>
                    </div>

                    <button type="submit" class="btn-register">Create Account</button>
                </form>

                <div class="footer-link">
                    Already have an account? <a asp-controller="Account" asp-action="Login">Sign in here</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function switchRegisterMode(mode) {
            const tabs = document.getElementById('registerTypeTabs');
            const roleInput = document.getElementById('roleInput');
            const btnUser = document.getElementById('btn-tab-user');
            const btnAdmin = document.getElementById('btn-tab-admin');
            
            tabs.setAttribute('data-active', mode);
            
            if (mode === 'admin') {
                roleInput.value = 'Admin';
                btnAdmin.classList.add('active');
                btnUser.classList.remove('active');
            } else {
                roleInput.value = 'User';
                btnUser.classList.add('active');
                btnAdmin.classList.remove('active');
            }
        }

        // Add focus effect to SVGs
        document.querySelectorAll('.input-group-custom input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.querySelector('.input-icon').style.color = 'var(--primary)';
            });
            input.addEventListener('blur', function() {
                this.parentElement.querySelector('.input-icon').style.color = 'var(--text-light)';
            });
        });
    </script>
</body>
</html>
